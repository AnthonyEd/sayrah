<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:src="@drawable/header_vector_blue_main"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAIN MENU"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"/>

<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="3"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

<RelativeLayout
    android:id="@+id/cs_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:clickable="true"
    android:background="@drawable/clickable"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/chatting_mobile_phone"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Chat with Sayrah, tell her how you feel and listen to her advice and reminders"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/web_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:background="@drawable/clickable"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/globe2"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="View maps and live updates of infected areas worldwide"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emergency_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:background="@drawable/clickable"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/emergency_call"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Emergency contacts and general advice"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/who_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:background="@drawable/clickable"
        >

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/who"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="World Health Organization safety tips"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/donatebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:background="@drawable/clickable"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/donate_ic"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Donate, a massive portion of the donation would go to health organizations around the world."
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>

</GridLayout>

</RelativeLayout>